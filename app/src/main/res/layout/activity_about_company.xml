<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/big_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/img_company"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/big_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_company_text"/>

        <RelativeLayout
            android:id="@+id/about_company_phone_layout"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                map:srcCompat="@drawable/ic_local_phone_black_24dp"/>

            <TextView
                android:id="@+id/phone_text"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_toEndOf="@id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_company_email_layout"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/email_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                map:srcCompat="@drawable/ic_email_black_24dp"/>

            <TextView
                android:id="@+id/email_text"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_toEndOf="@id/email_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_company_web_layout"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/web_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                map:srcCompat="@drawable/ic_web_black_24dp"/>

            <TextView
                android:id="@+id/web_text"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_toEndOf="@id/web_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_company_address_layout"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/address_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                map:srcCompat="@drawable/ic_map_black_24dp"/>

            <TextView
                android:id="@+id/address_text"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_toEndOf="@id/address_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_company_clock_layout"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/clock_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                map:srcCompat="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:id="@+id/clock_text"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_toEndOf="@id/clock_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <fragment
            android:id="@+id/map"
            android:layout_margin="@dimen/big_margin"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:context="ru.arink_group.deliveryapp.presentation.view.activity.AboutCompanyActivity" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

